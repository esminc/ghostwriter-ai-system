# 代筆さん環境設定ファイル

# esa API設定
ESA_ACCESS_TOKEN=your_esa_access_token_here
ESA_TEAM_NAME=esminc-its

# OpenAI API設定（将来のAI機能拡張用）
OPENAI_API_KEY=your_openai_api_key_here

# 開発環境設定
NODE_ENV=development
DEBUG=true

# データベース設定
DB_PATH=./src/database/ghostwriter.db

# Slack Bot設定（Phase 2用）
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Slack MCP統合設定（戦略B改良版）
SLACK_TEAM_ID=your_slack_team_id_here
SLACK_CHANNEL_IDS=C01234567,C76543210
SLACK_MCP_ENABLED=true

# Google Calendar API設定（Phase 2用）
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
